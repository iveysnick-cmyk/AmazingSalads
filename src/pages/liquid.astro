
---
import BaseLayout from '../layouts/BaseLayout.astro';
import { products } from '../data/products';
const galleryItems = products.slice(0, 7);
---

<BaseLayout>

<section id="hero-1426">
    <!-- Canvas for liquid effect -->
    <canvas id="heroCanvas"></canvas>

    <div class="cs-container">
        <div class="cs-content">
            <h1 class="cs-title">Fresh Leafy Greens for Wholesale</h1>
            <p class="cs-text">
                Consistent supply, certified quality, fast delivery.
            </p>
            <div class="cs-button-group">
                <a href="" class="cs-button-solid cs-button1">Browse Products</a>
                <a href="" class="cs-button-solid cs-button2">Request Wholesale Pricing</a>
            </div>
        </div>
    </div>

    <!-- Hidden picture to provide responsive image source -->
    <picture id="heroPicture" style="display:none;">
        <source media="(max-width: 600px)" srcset="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Landscapes/field-m.jpg">
        <source media="(min-width: 601px)" srcset="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Landscapes/field.jpg">
        <img src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Landscapes/field.jpg" alt="field">
    </picture>
</section>

<style>

    /* Mobile - 360px */
    @media only screen and (min-width: 0rem) {
