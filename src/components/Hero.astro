---
const { title, subtitle } = Astro.props;
---

<section class="hero">
  <h1>{title}</h1>
  <p>{subtitle}</p>
  <button>Get Started</button>
</section>

<style>
.hero {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
  background: linear-gradient(135deg, #6b73ff 0%, #000dff 100%);
  color: white;
  text-align: center;
}

.hero h1 {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.hero p {
  font-size: 1.5rem;
  margin-bottom: 2rem;
}

.hero button {
  padding: 1rem 2rem;
  font-size: 1rem;
  background-color: #ff6363;
  color: white;
  border: none;
  border-radius: 8px;
  cursor: pointer;
}

.hero button:hover {
  background-color: #ff3b3b;
}
</style>
